<Page x:Class="Phone_Book.Pages.ReferencesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Phone_Book.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReferencesPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ListBox Name="ReferenceMenu" Grid.Column="0" SelectionChanged="ReferenceMenu_SelectionChanged">
            <ListBoxItem Name="Position">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Должности"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem Name="Department">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Подразделения"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem Name="Authorization">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Авторизации пользователей"/>
                </StackPanel>
            </ListBoxItem>

        </ListBox>

        <Frame Name="ReferenceFrame" Grid.Column="1"/>
    </Grid>
</Page>
